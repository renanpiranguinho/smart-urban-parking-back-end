{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["mail/templates/**/*"],
    "plugins": [{
      "name": "@nestjs/swagger/plugin",
      "options": {
        "dtoFileNameSuffix": [".dto.ts", ".entity.ts"],
        "classValidatorShim": true
      }
    }],
    "watchAssets": true
  }
}
